@model HomeworkPortal.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<h2>Giriş Yap</h2>

<form asp-action="Login" method="post" class="mt-3">
    <div class="mb-3">
        <label class="form-label">E-posta veya Kullanıcı Adı</label>
        <input asp-for="EmailOrUserName" class="form-control" />
        <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Şifre</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Giriş</button>
</form>
