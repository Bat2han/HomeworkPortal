@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="m-0">Admin Paneli</h2>
    <span class="text-muted small">Dashboard</span>
</div>

<div class="row g-3 mb-4">

    <!-- Toplam Kullanıcı -->
    <div class="col-12 col-md-4">
        <a asp-controller="Admin" asp-action="Users" class="text-decoration-none">
            <div class="card text-white bg-primary shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Toplam Kullanıcı</h5>
                    <div class="display-5 fw-semibold mb-1" id="totalUsers">
                        @ViewBag.TotalUsers
                    </div>
                    <p class="mb-0"><small>Detaylı liste için tıklayın</small></p>
                </div>
            </div>
        </a>
    </div>

    <!-- Toplam Kategori -->
    <div class="col-12 col-md-4">
        <a asp-controller="Admin" asp-action="Categories" class="text-decoration-none">
            <div class="card text-white bg-success shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Toplam Kategori</h5>
                    <div class="display-5 fw-semibold mb-1" id="totalCategories">
                        @ViewBag.TotalCategories
                    </div>
                    <p class="mb-0"><small>Kategorileri yönetmek için tıklayın</small></p>
                </div>
            </div>
        </a>
    </div>

    <!-- Toplam Ödev (SignalR ile canlı artacak) -->
    <div class="col-12 col-md-4">
        <a asp-controller="Assignment" asp-action="Index" class="text-decoration-none">
            <div class="card text-white bg-dark shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Toplam Ödev</h5>
                    <div class="display-5 fw-semibold mb-1" id="totalAssignments">
                        @ViewBag.TotalAssignments
                    </div>
                    <p class="mb-0"><small>Ödevler eklendikçe canlı güncellenir</small></p>
                </div>
            </div>
        </a>
    </div>

</div>

<div class="row g-3">

    <!-- Hızlı Erişim -->
    <div class="col-12 col-lg-6">
        <div class="card shadow-sm h-100">
            <div class="card-header fw-semibold">Hızlı Erişim</div>
            <div class="card-body">
                <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-primary me-2 mb-2">
                    Kullanıcı Listesi
                </a>
                <a asp-controller="Admin" asp-action="Categories" class="btn btn-outline-success me-2 mb-2">
                    Kategori Yönetimi
                </a>
                <a asp-controller="Assignment" asp-action="TeacherDashboard" class="btn btn-outline-dark mb-2">
                    Öğretmen Paneli
                </a>
            </div>
        </div>
    </div>

    <!-- Son Eklenen Ödev (SignalR ile canlı güncellenir) -->
    <div class="col-12 col-lg-6">
        <div class="card shadow-sm h-100">
            <div class="card-header fw-semibold">Son Bildirim</div>

            <div class="card-body">
                <div class="text-muted small mb-2">Son eklenen ödev</div>

                <div class="h5 mb-1" id="lastAssignmentTitle">
                    @((string?)ViewBag.LastTitle ?? "-")
                </div>

                <div class="text-muted small" id="lastAssignmentMeta">
                    Oluşturma: @((string?)ViewBag.LastCreatedAt ?? "-")
                </div>

                <div class="text-muted small mt-1" id="lastAssignmentDue">
                    Son Tarih: @((string?)ViewBag.LastDueDate ?? "-")
                </div>

                <div class="small text-muted mt-3">
                    (Teacher ödev ekleyince SignalR ile canlı güncellenir)
                </div>
            </div>
        </div>
    </div>

</div>
