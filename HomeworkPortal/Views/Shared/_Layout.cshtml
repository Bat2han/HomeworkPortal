<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Ödev Portalı</title>

    <!-- BOOTSTRAP 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body { background-color: #f8f9fa; }
        .navbar-brand { font-weight: 600; }
    </style>
</head>

<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Ödev Portalı</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin Paneli</a>
                        </li>
                    }

                    @if (User.IsInRole("Teacher"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Assignment" asp-action="TeacherDashboard">Öğretmen Paneli</a>
                        </li>
                    }

                    @if (User.IsInRole("Student"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Assignment" asp-action="Index">Ödevler</a>
                        </li>
                    }
                </ul>

                <!-- Sağ taraf (login kısmı) -->
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <span class="navbar-text me-3 text-light">
                                Merhaba, @User.Identity!.Name
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Logout">Çıkış</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Login">Giriş</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- ANA İÇERİK -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
