@model IEnumerable<HomeworkPortal.Models.Submission>
@{
    ViewData["Title"] = "Teslimlerim";
}

<h2 class="mb-3">Teslimlerim</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Henüz teslim yaptığınız bir ödev yok.</div>
}
else
{
    <table class="table table-striped table-hover bg-white shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Ödev Id</th>
                <th>Dosya</th>
                <th>Yüklenme</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Id</td>
                    <td>@s.AssignmentId</td>
                    <td>@s.OriginalFileName</td>
                    <td>@s.UploadedAt.ToString("g")</td>
                    <td>@s.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
